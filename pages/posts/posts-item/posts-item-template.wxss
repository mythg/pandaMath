.posts-content {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}

.posts-content-author-data {
  /* margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx; */
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.posts-content-author {
  height: 60rpx;
  width: 60rpx;
  /* vertical-align: middle; */
}

.posts-content-date {
  margin-left: 20rpx;
  /* vertical-align: middle; */
  font-size: 26rpx;
}

.posts-content-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  color: #333;
}

.posts-content-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 30rpx;
}

.posts-content-text {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.posts-content-collection {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.posts-content-collection-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.posts-content-collection-text {
  margin-right: 40rpx;
}